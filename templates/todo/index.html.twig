<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{{ controller_name }}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body class="container">
{%for message in app.session.flashbag.get('inital list')%}
<div class="alert alert-success" role="alert">
    {{message}}
</div>
{%endfor%}

{%for message in app.session.flashbag.get('exist')%}
    <div class="alert alert-danger" role="alert">
        {{message}}
    </div>
{%endfor%}

{%for message in app.session.flashbag.get('error')%}
    <div class="alert alert-danger" role="alert">
        {{message}}
    </div>
{%endfor%}

{%for message in app.session.flashbag.get('added')%}
    <div class="alert alert-success" role="alert">
        {{message}}
    </div>
{%endfor%}

{%for message in app.session.flashbag.get('reset')%}
    <div class="alert alert-success" role="alert">
        {{message}}
    </div>
{%endfor%}

{%for message in app.session.flashbag.get('remove')%}
    <div class="alert alert-success" role="alert">
        {{message}}
    </div>
{%endfor%}
<table class="table table-secondary">
    <thead>
    <tr>
        <th scope="col">Todos</th>
    </tr>
    </thead>
    <tbody>
        {%for key,value in app.session.get('todos')%}
    <tr>
        <td>{{key}} : {{value}}</td>
    </tr>
        {%endfor%}

    </tbody>
</table>
</body>
</html>